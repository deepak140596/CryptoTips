<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/item_coin_detail_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/item_coin_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/ninja_cat"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/item_coin_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:text="Bitcoin (BTC)"
                        android:textSize="@dimen/dimen_body"/>

                </LinearLayout>



                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/item_coin_fav_border_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/ic_fav_border" />

                        <ImageView
                            android:id="@+id/item_coin_fav_filled_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/ic_favorite_filled"
                            android:visibility="gone"/>
                    </RelativeLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                android:layout_below="@+id/item_coin_detail_ll">



                <TextView
                    android:id="@+id/item_coin_rank_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textAlignment="textEnd"
                    android:text="#1"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <TextView
                            android:id="@+id/item_coin_24hr_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24hr: "/>
                        <TextView
                            android:id="@+id/item_coin_24hr_change_pct_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/item_coin_24hr_label"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"
                            android:text="(+2.7%)"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <TextView
                            android:id="@+id/item_coin_24hrvol_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24hr Vol: "/>
                        <TextView
                            android:id="@+id/item_coin_24hr_vol_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/item_coin_24hrvol_label"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"
                            android:text="(+2.7%)"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <TextView
                            android:id="@+id/item_coin_mkt_cap_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mkt Cap: "/>
                        <TextView
                            android:id="@+id/item_coin_mkt_cap_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/item_coin_mkt_cap_label"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"
                            android:text="(+2.7%)"/>
                    </RelativeLayout>

                </LinearLayout>



                <TextView
                    android:id="@+id/item_coin_price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    android:textColor="@color/color_blue"
                    android:text="$ 12322"/>





            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>